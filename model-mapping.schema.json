{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FHIRConnect Model Schema",
  "type": "object",
  "properties": {
    "grammar": {
      "type": "string",
      "pattern": "^FHIRConnect/v[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "type": {
      "type": "string",
      "enum": [
        "model",
        "extension"
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "spec": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string",
          "enum": [
            "FHIR"
          ]
        },
        "version": {
          "type": "string",
          "enum": [
            "R4"
          ]
        },
        "extends": {
          "type": "string"
        },
        "openEhrConfig": {
          "type": "object",
          "properties": {
            "archetype": {
              "type": "string"
            }
          },
          "required": [
            "archetype"
          ]
        },
        "fhirConfig": {
          "type": "object",
          "properties": {
            "structureDefinition": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "structureDefinition"
          ]
        }
      },
      "required": [
        "system",
        "version"
      ]
    },
    "mappings": {
      "type": "object"
    },
    "preprocessor": {
      "type": "object"
    }
  },
  "required": [
    "grammar",
    "type",
    "metadata",
    "spec"
  ]
}